<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/colorUpPressed" android:endColor="@color/Black" android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/colorUpPressed" android:endColor="@color/Black" android:angle="270" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:endColor="@color/Black" android:startColor="@color/colorUp" android:angle="270" />
        </shape>
    </item>

</selector>

